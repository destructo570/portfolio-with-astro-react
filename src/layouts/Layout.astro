---
import Header from "../components/Header/Header.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Vishal Kashi's portfolio website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@200;300;600&family=Pixelify+Sans:wght@600&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <svg class="fixed top-0 left-0 w-full h-full pointer-events-none">
      <filter id="noise-filter-bg">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.8"
          numOctaves="4"
          stitchTiles="stitch"
        >
        </feTurbulence>
        <feColorMatrix type="saturate" values="0"></feColorMatrix>
        <feComponentTransfer>
          <feFuncR type="linear" slope="0.7"></feFuncR>
          <feFuncG type="linear" slope="0.7"></feFuncG><feFuncB
            type="linear"
            slope="0.7"></feFuncB><feFuncA type="linear" slope="0.12"
          ></feFuncA></feComponentTransfer
        ><feComponentTransfer
          ><feFuncR type="linear" slope="0.3" intercept="0.35"
          ></feFuncR><feFuncG type="linear" slope="0.3" intercept="0.35"
          ></feFuncG><feFuncB type="linear" slope="0.3" intercept="0.35"
          ></feFuncB></feComponentTransfer
        ></filter
      ><rect width="100%" height="100%" filter="url(#noise-filter-bg)"
      ></rect></svg
    >
    <Header />
    <slot />
  </body>
</html>
