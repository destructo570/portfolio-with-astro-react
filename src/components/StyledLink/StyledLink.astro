---
import { Icon } from 'astro-icon';
type Props = {
  link: string;
  title: string;
  classes?: string;
  before_asset?: string;
  disabled?: boolean;
};
const { link, title, classes, before_asset, disabled=false } = Astro.props;
---

<div class:list={["flex justify-start items-center gap-2 link", classes]}>
    <!-- Loads the SVG in `/src/icons/filename.svg` -->
    {before_asset && <Icon name={before_asset} class='max-w-[16px]'/>}
  <a href={link} class="opacity-50">{title}</a>
</div>

<style>
    .link a, .link svg{
        opacity: 0.5;
        transition: opacity .2s ease-in-out;
    }
    .link:hover a, .link:hover svg{
        color: white;
        opacity: 1;
    }
</style>
