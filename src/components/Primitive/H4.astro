---
type Props = {
  title: string;
  is_inline?: boolean;
  is_underline?: boolean;
};
const { title, is_inline, is_underline } = Astro.props;
---

<h4 class:list={[`${is_inline ? "inline" : "w-full"}`, {'underline underline-offset-4': is_underline}]}>
  {title}
</h4>

<style>
  h4 {
    font-size: 16px;
  }
</style>
