---
type Props = {
  text: string;
  type?: string;
  classes?: string;
};
const { text, type = "medium", classes } = Astro.props;
---

<p class:list={["w-full", `text-${type}`, classes]}>
  {text}
</p>

<style>
  p {
    font-weight: 300;
  }
  .text-small {
    font-size: 12px;
  }
  .text-medium {
    font-size: 16px;
  }
  .text-large {
    font-size: 18px;
  }
</style>
