---
type Props = {
  link: string;
  title: string;
  classes?: string;
  before_asset?: any | null;
};
const { link, title, classes, before_asset = null } = Astro.props;
---

<div class:list={["flex justify-start items-center gap-2 link", classes]}>
  <a href={link}>{title}</a>
</div>

<style>
    .link a{
        opacity: 0.5;
        transition: opacity .2s ease-in-out;
    }
    .link a:hover{
        color: white;
        opacity: 1;
    }
</style>
