---
import "./styles.css";
const pathname = new URL(Astro.request.url).pathname;
const current_path = pathname.slice(1);
---

<header class="flex justify-between max-w-[768px] mx-auto px-16 py-4 max-sm:px-6">
  <a href="/">
    <img src="/favicon.svg" alt="logo" class="logo" />
  </a>
  <ul class="flex justify-between space-x-6 nav-links">
    <li class:list={["flex justify-center items-center", `${current_path === "" ? 'active': 'anim-hover-white'}`]}>
      <a href="/">Home</a>
    </li>
    <li class:list={["flex justify-center items-center", `${current_path.includes("blog") ? 'active': 'anim-hover-white'}`]}>
      <a href="/blog">Blog</a>
    </li>
    <li class:list={["flex justify-center items-center anim-hover-white"]}>
      <a href="/resume.pdf" download="Vishal_Kashi_Resume.pdf">Resume</a>
    </li>
  </ul>
</header>
