---
import { Image } from "astro:assets";
import user_profile from "../../../public/images/user_profile.png";
import "./styles.css";
---

<section
  class="flex justify-between items-center min-h-[800px] max-sm:flex-col-reverse"
>
  <div class="w-1/2 my-auto max-sm:w-full">
    <h2>Vishal Kashi</h2>
    <h3>Fullstack Web Developer</h3>
    <p>I build awesome stuff for web and mobile.</p>
    <div class="flex gap-3 py-2">
      <a
        href="https://www.github.com/destructo570"
        target="_blank"
        rel="noreferrer"
      >
        <img src="/icons/github.svg" alt="github" />
      </a><a
        href="https://www.twitter.com/destructo570"
        target="_blank"
        rel="noreferrer"><img src="/icons/x.svg" alt="twitter" /></a
      >
      <a
        href="https://www.dribbble.com/VishalKashi"
        target="_blank"
        rel="noreferrer"><img src="/icons/dribbble.svg" alt="dribbble" /></a
      >
    </div>
  </div>
  <div class="hero-profile min-w-[400px] min-h-[800px] max-sm:min-h-[600px]">
    <Image
      src={user_profile}
      alt=""
      width={400}
      height={400}
      class="hero-profile-img absolute top-[20%] right-[0px] z-10"
    />
    <div
      class="hero-circle-card absolute card-green rounded-full top-[25%] left-[0px] z-20"
    >
    </div>
    <div
      class="hero-circle-card absolute rounded-full bottom-[30%] right-[0px] max-sm:bottom-[15%] z-20"
    >
    </div>
  </div>
</section>
