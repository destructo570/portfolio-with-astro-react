---
import { Image } from "astro:assets";
import user_profile from "../../../public/images/user_profile.png";
import "./styles.css";
---

<section
  class="flex justify-between items-center min-h-[800px] max-sm:flex-col-reverse max-sm:pb-24"
>
  <div class="w-1/2 my-auto max-sm:w-full">
    <h2>Vishal Kashi</h2>
    <h4 class="px-1">Software Engineer | India</h4>
    <h4 class="px-1"><span>I love moving pixels</span> 👾 <span>and killing bugs</span> 🐞</h4>
    <div class="flex gap-3 py-3 px-1">
      <a
        href="https://www.github.com/destructo570"
        target="_blank"
        rel="noreferrer"
      >
        <h5 class="hover-highlight">github</h5>
      </a>|<a
        href="https://www.twitter.com/destructo570"
        target="_blank"
        rel="noreferrer"
      >
        <h5 class="hover-highlight">twitter</h5>
      </a> |
      <a
        href="https://www.linkedin.com/in/vishal-kashi/"
        target="_blank"
        rel="noreferrer"
      >
        <h5 class="hover-highlight">linkedin</h5>
      </a> |
      <a
        href="https://dribbble.com/destructo570"
        target="_blank"
        rel="noreferrer"
      >
        <h5 class="hover-highlight">dribbble</h5>
      </a>
    </div>
  </div>
  <div class="hero-profile min-w-[400px] min-h-[800px] max-sm:min-h-[600px]">
    <Image
      src={user_profile}
      alt=""
      width={400}
      height={400}
      class="hero-profile-img absolute top-[20%] right-[0px] z-10"
    />
    <div
      class="hero-circle-card absolute card-green rounded-full top-[25%] left-[0px] z-20"
    >
    </div>
    <div
      class="hero-circle-card absolute rounded-full bottom-[30%] right-[0px] max-sm:bottom-[15%] z-20"
    >
    </div>
  </div>
</section>
