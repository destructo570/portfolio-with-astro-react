---
import { slugify } from '../../utils/utils';
type Props = {
    title: string;
}
const {title} = Astro.props;
---

<a class="tag rounded bg-zinc-600 px-2 py-1 inline-block no-underline" href={`/blog/category/${slugify(title)}`}>{title}</a>

<style>
    .tag{
        background-color: rgba(82, 82, 82, 0.4);
        font-size: 12px;
        color: #cdcdcd;
    }
</style>